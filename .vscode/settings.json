{
  // EDITOR
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "eslint.autoFixOnSave": true,
  "editor.minimap.enabled": true,
  "editor.autoClosingQuotes": "always",
  "editor.autoSurround": "quotes",
  // EXPLORER
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": true,
  // GENERAL
  "workbench.colorTheme": "Cobalt2",
  "workbench.iconTheme": "vscode-great-icons",
  // WINDOW
  "window.zoomLevel": 2,
  // SEARCH
  "search.showLineNumbers": true,
  // EXTERNAL -----
  // PRETTIER
  "prettier.singleQuote": true,
  //   "prettier.arrowParens": "always",
  "prettier.trailingComma": "all",
  "prettier.printWidth": 120,
  "editor.rulers": [120, 120],
  // GIT
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "workbench.colorCustomizations": {
    "activityBar.background": "#372933",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#617828",
    "activityBarBadge.foreground": "#e7e7e7",
    "titleBar.activeBackground": "#1a1318",
    "titleBar.inactiveBackground": "#1a131899",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveForeground": "#e7e7e799",
    "statusBar.background": "#1a1318",
    "statusBarItem.hoverBackground": "#372933",
    "statusBar.foreground": "#e7e7e7"
  },
  "peacock.color": "#1a1318"
}
